{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/recipe.schema.json",
    "type": "object",
    "properties": {
        "title": {
            "type": "string",
            "minLength": 6,
            "maxLength": 60
        },
        "description": {
            "type": "string",
            "minLength": 5,
            "maxLength": 1000
        },
        "image": {
            "type": "string",
            "maxLength": 255
        },
        "visibility_id": {
            "type": "integer",
            "minimum": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "description",
        "visibility_id"
    ]
}