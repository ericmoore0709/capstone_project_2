{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/recipe.schema.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 500
        },
        "image": {
            "type": "string",
            "maxLength": 255
        },
        "admin_id": {
            "type": "integer",
            "minimum": 1
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "description",
        "admin_id"
    ]
}